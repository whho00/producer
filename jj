
        stage('Deploy to EKS') {
            steps {
                withCredentials([file(credentialsId: 'kubeconfig-eks', variable: 'KUBECONFIG')]) {
                    sh """
                    helm upgrade --install $IMAGE_NAME ./chart \
                        --set name=$IMAGE_NAME,image=$ECR_REPO/$IMAGE_NAME:latest
                    """
                }
            }
        }
